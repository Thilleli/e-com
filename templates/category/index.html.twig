{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <br>
            <h3 class="text-center mb-4">Catégories</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.namename }}</td>
                        <td>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune catégorie enregistré</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_category_new') }}" class="btn btn-primary">Ajouter une catégorie</a>
        </div>
    </div>
</div><br>
{% endblock %}
