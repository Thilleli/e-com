{% extends '/admin/base.html.twig' %}

{% block title %}AdminDashbord{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tableau de bord Admin</h1>
    <div class="container">
        <div class="row">
            <div class="card mt-5">
                <div class="card-header">
                    Nombre d'utilisateurs inscrits: {{ userCount }}
                </div>
                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Téléphone</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.name }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.phone }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    </table>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card mt-5">
                    <div class="card-header">
                        Liste des produits
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ productCount }}</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
