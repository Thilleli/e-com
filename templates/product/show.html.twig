{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <br>
    <div class="container">
        <br>
        <div>
            <a href="{{ path('app_product_by_category', {'id': product.category.id}) }}" class="breadcrumb_cat">
                {{ product.category.name }}
            </a>
            <span class="breadcrumb_prod">/ {{ product.name }}</span>
        </div>
        <div class="row_product">
            <div class="col-md-4">
                <img src="/upload/images/{{ product.fileName.path }}" class="img-fluid" alt="">
            </div>
            <div class="col-md-4">
                <br>
                <div class="product-title-wrapper">
                    <p>TestMarque</p>
                    <h3 class="mb-4">{{ product.name }}</h3>
                </div>
                <div class="product-content">
                    <p><strong>Catégorie :</strong> {{ product.category.name }}</p>
                    <p>Miss Dior Eau de Parfum s'habille en édition limitée d'un coffret orné d'une flore dorée...</p>
                    <p><strong>{{ product.priceHT }} €</strong></p>
                </div>
                <div class="col-md-6 text-center">
                    <a href="" class="btn btn-primary"> Ajouter au panier</a>
                </div>
            </div>
        </div>
        <br>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">Modifier le produit</a>
                    <a href="{{ path('app_product_delete', {'id': product.id}) }}" class="btn btn-danger">Supprimer le produit</a>
                </div>
            </div>
        {% endif %}
        <br>
    </div>
{% endblock %}
