{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <br>
            <h3 class="text-center mb-4">Catégories</h3>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ product.priceHT }}</td>
                    </tr>
                    <tr>
                        <th>Quantité en stock</th>
                        <td>{{ product.stock }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <br>
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">Modifier le produit</a>
            <a href="{{ path('app_product_delete', {'id': product.id}) }}" class="btn btn-danger">Supprimer le produit</a>
        </div>
    </div>
    <br>
</div>
{% endblock %}
