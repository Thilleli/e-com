{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_errors(form) }}
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_row(form.name, {'label': 'Nom', 'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.marque, {'label': 'Marque', 'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.priceHT, {'label': 'Prix HT', 'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.category, {'label': 'Catégorie', 'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.taxes, {'label': 'Taxes', 'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.Stock, {'label': 'Quantité en stock', 'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.fileName, {'label': 'Image', 'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <br>
                <div>
                    <button type="submit" class="btn btn-primary btn-block">Valider</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <br>
{% endblock %}





